<% include ../partials/header %>
<div class="row" style="margin-left:50px;margin-right:50px;background-color:#f0f0f0;padding-top:25px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)" >
<form class="col s12" action="http://localhost:4000/event/add" method="post" >
	<input type="hidden" name="id" value="">
	<div class="form-group">
		<label for="name" class="col-2 col-form-label"><b>Item_Name</b></label>
		<div class="col-11">
			<input type="text" name="name" value="" class="form-control">
		</div>
	</div>

	<div class="form-group">
		<label for="qty" class="col-2 col-form-label"><b>Quantity</b></label>
		<div class="col-11">
			<input type="text" name="qty" value="" class="form-control" onkeypress="return isNumber(event)">
		</div>
	</div>

	<div class="form-group">
		<label for="amount" class="col-2 col-form-label"><b>Amount</b></label>
		<div class="col-11">
			<input type="text" name="amount" value="" class="form-control" onkeypress="return isNumber(event)">
		</div>
	</div>

	<div class="form-group">
		<label for="amount" class="col-2 col-form-label" style="color:#ffffff"> Click Here to submit </label>
		<div class="col-10">
			<input type="submit" name="submit" value="Save Item" class="btn btn-primary btn-lg">
			<a href="http://localhost:4000" class="btn btn-primary btn-lg" style="margin-left:50px"> Cancel Action </a>
		</div>
		
		

	</div>
</form>
</div>

<script type="text/javascript">
	function isNumber(evt) {
    evt = (evt) ? evt : window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode;
    if (charCode > 31 && (charCode < 48 || charCode > 57)) {
        return false;
    }
    return true;
}
</script>
